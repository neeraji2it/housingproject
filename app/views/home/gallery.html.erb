
<div class="bgcolor">


<ul class="bxslider">
  <% @images.each do |image| %>
    <li><%= image_tag(image.image.url(:original), :height => "300", :width =>"500")  %></li>
  <% end %>
</ul>

<div class="row-fluid" style="float:right;max-width: 54%;">
  <div class="span12">
    <h2>Property Details</h2>
    <div class="row-fluid">

        
        <div class="row-fluid">
          <div class="span4">Property Title :</div>
          <div class="span4"><%= @property.title%></div>
        </div>
        
        <div class="row-fluid">
          <div class="span4">Type of Land :</div>
          <div class="span4"><%= @property.type_of_land %></div>
        </div>

        <div class="row-fluid">
          <div class="span4">Price:</div>
          <div class="span4"><%= @property.price %></div>
        </div>
        
    <div class="row-fluid">
          <div class="span4">Rate:</div>
          <div class="span4"><%= @property.rate %></div>
        </div>
        
      <div class="row-fluid">
          <div class="span4">City:</div>
          <div class="span4"><%= @property.city %></div>
        </div>
        
        <div class="row-fluid">
          <div class="span4">Location:</div>
          <div class="span4"><%= @property.location %></div>
        </div>
        
        <div class="row-fluid">
          <div class="span4">Description:</div>
          <div class="span4"><%= @property.description %></div>
        </div>
        
        <div class="row-fluid">
          <div class="span4">Mobile:</div>
          <div class="span4"><%= @property.mobile %></div>
        </div>
        
    
    </div>
  </div>
</div>


</div>
  
<script src="/assets/jquery.bxslider.min.js"></script>
<script type="text/javascript">
  $(document).ready(function() {
    $('.bxslider').bxSlider();

  });
</script>


<style>
  .bx-wrapper{
    float: left;
    width: 480px;
    
  }
  .bgcolor{
color: cyan;
  }
  
  
</style>