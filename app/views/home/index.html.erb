    <div class="content-banner">
      <h1>Choose A City to Explore</h1>
    </div>
     <div class="box-city">
      <div class="row">
        <ul class="ch-grid">
          <% @cities = [["Mumbai","18.97","72.82"],["Hosur","12.73","77.83"],["Bangalore","12.97","77.59"],["Hyderabad","17.41","78.52"],["Chennai","13.060","80.24"],["Chittoor","13.21","79.100"],["Kanakapur","12.550","77.4170"],["Mysore","12.295","76.639"],["Coorg","12.300","75.9293"],["Chikmagalur","13.31","75.77"],["Anantapur","14.67","77.59"]] %>

          <% @cities.each_with_index do |name, index| %>
