              <div class="ch-item">
                <div class="ch-info">
                  <div class="ch-info-front">
                    <h3><%= link_to name[0], land_home_index_path(:city => name[0], :lat => name[1], :lon => name[2]), :style => 'color: white;font-size: 15px;' %></h3>
                  </div>
                  <div class="ch-info-back ch-img-<%= index+1%>" onclick="javascript: location.href = <%= "'#{land_home_index_path(:city => name[0], :lat => name[1], :lon => name[2])}'" %>">

                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="clearF"></div>
      <p><a href="#" class="btn-login btn-more-cities">More Cities</a> <a href="#" class="btn-login btn-more-cities">Read More</a></p>
    </div>
  </div>
</div>
