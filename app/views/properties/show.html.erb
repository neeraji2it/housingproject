<%- model_class = Property -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  
  <dt><strong><%= model_class.human_attribute_name(:type_of_land) %>:</strong></dt>
  <dd><%= @property.type_of_land %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @property.title.titleize %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @property.price %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:area) %>:</strong></dt>
  <dd>
  <%= @property.area %>
    <%= @property.unit %>
  </dd>
   <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @property.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @property.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @property.location.titleize %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @property.description.titleize %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @property.name.capitalize %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @property.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile) %>:</strong></dt>
  <dd><%= @property.mobile %></dd>
  
 

  <dt><strong><%= model_class.human_attribute_name(:document) %>:</strong></dt>
  <dd><a href="<%= @property.document.url %>"><b style="color:#595959;"> download attachment</b></a></dd>
  <dt><strong><%= model_class.human_attribute_name(:image)%>:</strong></dt>
  <dd><%= image_tag(@property.images.first.image.url(:original)) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
    main_home_home_index_path, :class => 'btn btn-success'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
    edit_property_path(@property), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
    property_path(@property),
    :method => 'delete',
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
    :class => 'btn btn-danger' %>
</div>
