
<%- model_class = Property -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class="table-responsive">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>S.No</th>
        
        <th><%= model_class.human_attribute_name(:type_of_land) %></th>
        <th><%= model_class.human_attribute_name(:title) %></th>
        <th><%= model_class.human_attribute_name(:price) %></th>
        <th><%= model_class.human_attribute_name(:area) %></th>
        <th><%= model_class.human_attribute_name(:state) %></th>
        <th><%= model_class.human_attribute_name(:city) %></th>
        <th><%= model_class.human_attribute_name(:location) %></th>
        <th><%= model_class.human_attribute_name(:description) %></th>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:email) %></th>
        <th><%= model_class.human_attribute_name(:mobile) %></th>

        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @properties.each_with_index do |property, index| %>
      <tr>
        <td><%=  index + 1%></td>
        
        <td><%= property.type_of_land.titleize %></td>
        <td><%= property.title.titleize %></td>
        <td><%= property.price %></td>
        <td><%= property.area %></td>
        <td><%= property.state %></td>
        <td><%= property.city %></td>
        <td><%= property.location.titleize %></td>
        <td><%= property.description.titleize %></td>
        <td><%= property.name.titleize %></td>
        <td><%= property.email %></td>
        <td><%= property.mobile %></td>
        <td>
          <span>
           
            <%= link_to "<i class='glyphicon glyphicon-list'></i>".html_safe, property_path(property) %> 
            <% if current_admin %>
            <%= link_to "<i class='glyphicon glyphicon-edit'></i>".html_safe, edit_property_path(property)%>                        
            <%= link_to "<i class='glyphicon glyphicon-trash'></i>".html_safe, property_path(property), :method => :delete, :data => {:confirm => "Are you sure"}%>
            
          </span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @properties  %>




