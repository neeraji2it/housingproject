<!DOCTYPE html>
<html>
  <head>
    <title>HousingProject</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', "jquery.bxslider", 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag 'default.css' %>

    <script type="text/javascript" src="/assets/js/custom.js"></script>
    <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% if controller.action_name !="home1" %>

      <div class="row">
        <div class="span9"></div>
        <header>
          <div class="topbar">   
            <div class="container"<a href="#" title="" id="logo"><%=  image_tag("logo.png", :alt => 'logo.png', :height=>"25",:width =>"35")%></a>           <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span class="glyphicon glyphicon-align-justify"></span></button>
              </div>
              <div class="navbar-collapse collapse">              
                <ul id="navigation">	
                  <li><a href="/home/home1" title="HOME">Home</a></li>
                  <li><a href="/home/about_us" title="ABOUT US">About us</a></li>
                  <li><a href="/home/privacy_policy" title="Privacy Policy">privacy_policy</a></li>
                  <li><a href="/home/help" title="Help">Help</a></li>
                  <li><a href="#" title="CONTACT US">Contact us</a></li>
                </ul>   
                <ul id="navigation">
                  <% if user_signed_in? %>
                    <li> <%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => 'btn-login' %></li>
                  <% else %>
                    <li><%= link_to "LOGIN", new_user_session_path,:class => 'btn-login' %></li>
                  <%end%>
                  <li><li><%= link_to "SIGNUP", new_user_registration_path,:class =>'btn-login' %> </li>
                  <% flash.each do |name, msg| %>
                    <%= content_tag :div, msg, :id => "flash_#{name}" %>
                  <% end %>
                </ul>   
              </div>        
              <div class="clearF"></div>
            </div> 
        </header>

      </div>

    <%  end %>


    <meta charset="utf-8">
    <title>jQuery UI Dialog - Default functionality</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.0/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.0/jquery-ui.js"></script>
    <link rel="stylesheet" href="/resources/demos/style.css"><% unless request.fullpath == "/admins/sign_in"  %>
      <script>
        $(function() {
          $("#dialog").dialog();
        });
      </script>

      <div id="dialog" title="Quick chat">
        <%= form_for :chat, :url => '/chat', :method => 'post', :class => 'form' do |f|   %>
          <label>Name: <span>*</span></label><br>
          <%= f.text_field :name %><br/>
          <label>Email: <span>*</span></label><br>
          <%= f.text_field :email%>
          <label>Phone: <span>*</span></label>
          <%= f.text_field :phone,:maxlength =>'10'%><br/>
          <label>Message:<span>*</span></label>
          <%= f.text_field :message%><br/>
          <%= f.submit 'send', :class=>"btn-send", :title=>"Send"%>
          <br/>
        <% end  %>
      </div>
      _
    <%end%>

    <%= yield %>
    <%= yield :scripts %> 
  </body>
</html>