<!DOCTYPE html>
<html>
  <head>
    <title>SVR Farms</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', "jquery.bxslider", 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag 'default.css' %>

    <script type="text/javascript" src="/assets/js/custom.js"></script>
    <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <meta charset="utf-8">
    <title>jQuery UI Dialog - Default functionality</title>
    <%#*<link rel="stylesheet" href="//code.jquery.com/ui/1.11.0/themes/smoothness/jquery-ui.css">%>
    
    <link rel="stylesheet" href="jquery-ui.css">
      <script src="jquery-1.10.2.js"></script>
      <script src="jquery-ui.js"></script>
    
    
    <%#*<script src="//code.jquery.com/jquery-1.10.2.js"></script>%>
    <%#*<script src="//code.jquery.com/ui/1.11.0/jquery-ui.js"></script>%>
    <link rel="stylesheet" href="/resources/demos/style.css"><% unless request.fullpath == "/admins/sign_in"  %>
      <script>
        $(function() {
          $("#dialog").dialog();
        });
      </script>

      <div id="dialog" title="Quick chat">
        <%= form_for :chat, :url => '/chat', :method => 'post', :class => 'form' do |f|   %>
          <label>Name: <span>*</span></label><br>
          <%= f.text_field :name %><br/>
          <label>Email: <span>*</span></label><br>
          <%= f.text_field :email%>
          <label>Phone: <span>*</span></label>
          <%= f.text_field :phone,:maxlength =>'10'%><br/>
          <label>Message:<span>*</span></label>
          <%= f.text_area :message%><br/>
        
          <%= f.submit 'send', :class=>"btn-send", :title=>"Send"%>
          <br/>
        <% end  %>
      </div>
    <%end%>
    <%= render :partial => '/layouts/header' %>
    <article>	
      <%= yield %>
      <%= yield :scripts %> 
    </article>
  </body>
</html>
<style>
  input[type=text]{
    height: 30px;
  }
</style>